<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        ardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FFFFEF"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/image2"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:layout_toLeftOf="@+id/image2"
                android:layout_toStartOf="@+id/image2"
                android:src="@drawable/download_1" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:src="@drawable/download_1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image2"
                android:layout_toEndOf="@+id/image2"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp" />



            <ImageView
                android:id="@+id/image2"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/image3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/download_1" />

            <ImageView
                android:id="@+id/stamp.png"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:src="@drawable/stamp"
                android:layout_alignTop="@+id/image3"
                android:layout_alignLeft="@+id/image3"
                android:layout_alignStart="@+id/image3" />


            <TextView
                android:id="@+id/list_item_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textSize="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>